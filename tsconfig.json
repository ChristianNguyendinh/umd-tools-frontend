{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@root/*": [
                "src/*"
            ],
            "@routes/*": [
                "src/routes/*"
            ],
            "@services/*": [
                "src/services/*"
            ],
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ]
}
